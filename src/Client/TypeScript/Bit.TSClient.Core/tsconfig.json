{
  "compileOnSave": true,
  "compilerOptions": {
    "composite": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "diagnostics": false,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": [ "ESNext", "dom" ],
    "module": "none",
    "noEmitOnError": false,
    "outFile": "bit.core.js",
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [ "bit.core.d.ts", "node_modules", "bin", "obj" ]
}